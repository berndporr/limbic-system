@Article{horvitz00,
author = "Horvitz, JC.",
title = "{Mesolimbocortical and nigrostriatal dopamine responses to salient non-reward events}",

abstract = "{While it has previously been assumed that mesolimbic
            dopamine neurons carry a reward signal, recent data from
            single-unit, microdialysis and voltammetry studies suggest
            that these neurons respond to a large category of salient
            and arousing events, including appetitive, aversive, high
