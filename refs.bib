@Article{hedou99,
  author =	 "Hedou, G. and Feldon, J. and Heidbreder, CA.",
  title =	 "{Effects of cocaine on dopamine in subregions of the
                  rat prefrontal cortex and their efferents to
                  subterritories of the nucleus accumbens}",
  abstract =	 "{The present study sought to investigate the
                  contributions of the ventral prelimbic/infralimbic
                  cortices and shell subterritory of the nucleus
